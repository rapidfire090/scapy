curl -s -X POST \
  -H "Authorization: Bearer $INFLUX_TOKEN" \
  -H "Content-Type: application/json" \
  http://<host>:8181/api/v3/engine/hdr_merge \
  -d '{
        "start": "2025-11-10T09:15:00Z",
        "end":   "2025-11-10T09:30:00Z",
        "percentiles": "50@90@95@99@99.9"
      }' | jq



curl -s -X POST \
  -H "Authorization: Bearer $INFLUX_TOKEN" \
  -H "Content-Type: application/json" \
  http://<host>:8181/api/v3/engine/hdr_merge \
  -d "{
        \"start\": \"$(date -u -d '-15 minutes' +%Y-%m-%dT%H:%M:%SZ)\",
        \"end\":   \"$(date -u +%Y-%m-%dT%H:%M:%SZ)\",
        \"percentiles\": \"50@90@95@99@99.9\",
        \"filters\": {
            \"component\": [\"ingest\"],
            \"channel\":   [\"A\", \"B\"]
        }
      }" | jq